    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug client",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "frontend-debug"
            ],
            "console": "integratedTerminal",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "server-watch"
            ],
            "restart": true,
            "console": "integratedTerminal",
        }
    ]
}